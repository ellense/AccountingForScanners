MODULE Report;

REQUIRE Room, Scanner, Staff;



FORM reports 'Отчет'
    OBJECTS report = (r = Room, s = Scanner, a = Staff ) PIVOT 
    
    PROPERTIES(r) desc, location, container, sumScan 
    PROPERTIES(s) number, model, numberRoom,nameStaff, date1, date2, date3
    PROPERTIES(a) name, post, departament, phone, email, numberRoom

    PROPERTIES(r) READONLY MEASURE number
;
